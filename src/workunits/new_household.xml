<workunit>
    <invokers>
        <invoker folderid="/explorer/txn/isstransaction" caption="New Household"  action="start" target="window" index="1" />
        <!--<invoker folderid="/home/tagbalay/household" caption="New Household"  action="start" target="window" index="1" />-->
        <invoker folderid="/home/tagbalay" caption="New Household"  action="start" target="window" index="1" />
        <invoker type="extActions" caption="Print"  icon="images/toolbars/printer.png" 
            action="print" visibleWhen="#{state=='save-success'}"/>
        
    </invokers>
    
    <code class="tagabukid.tagbalay.models.TagabukidNewHouseholdController" />   
    
    <pageflow>
        <start>
            <transition to="edit-generalinfo"  action="init"/>
        </start>

        <page name="edit-generalinfo" title="Household Information">
            <!--<transition to="check-din" caption="Next" name="next" mnemonic="N" immediate="false" />-->
            <transition to="edit-householdaddress" caption="Next" name="next" mnemonic="N" immediate="false" />
        </page>
        
        <page name="edit-householdaddress" title="Household Address" action="initHouseholdAddress">
            <transition to="edit-generalinfo" caption="Back" mnemonic="B" name="back" />
            <transition to="check-householdhead" caption="Next" name="next" mnemonic="N" action="verifyaddress"/>
        </page>
        
        <process name="check-householdhead" action="check">
            <transition to="verify-householdheadname" cond="#{pass==false}"/>
            <transition to="edit-contact" cond="#{pass==true}"/>
        </process>
        
        <page name="verify-householdheadname" title="Verify Head of the Family">
            <transition to="edit-generalinfo" caption="Back" mnemonic="B"/>
            <transition to="edit-contact" caption="Next" name="next" mnemonic="N" action="verify"/>
        </page>
        
        <page name="edit-contact" title="Household Contact Information">
            <transition to="edit-householdaddress" caption="Back" mnemonic="B" name="back" />
            <transition to="edit-members" caption="Next" name="next" mnemonic="N"/>
        </page>
        
        <page name="edit-members" title="Household Members Information">
            <transition to="edit-contact" caption="Back" mnemonic="B" name="back" />
            <transition to="confirm" caption="Next" name="next" mnemonic="N" action="updateInfo" />
        </page>

<!--        <page name="edit-attachments" title="Household Attachments">
            <transition to="edit-generalinfo" caption="Back" mnemonic="B" name="back" />
            <transition to="confirm" caption="Next" name="next" mnemonic="N" />
        </page>-->

        <page name="confirm" title="Confirm New Household">
            <transition to="edit-members" caption="Back" mnemonic="B" name="back"/>
            <transition to="save-success" caption="Submit" mnemonic="S" name="save" action="save" confirm="You are about to save this transaction. Continue?"/>
        </page>
        
        <page name="save-success" title="Save Success (New Household)">
            <transition to="edit-generalinfo" caption="Add Another" mnemonic="A" action="init"/>
        </page>

        <end/>
    </pageflow>
    
    <pages>
        <page name="edit-generalinfo" template="tagabukid.tagbalay.views.EditHouseholdGeneralInfoPage"/>
        <page name="edit-householdaddress" template="tagabukid.tagbalay.views.EditHouseholdAddressPage"/>
        <page name="edit-members" template="tagabukid.tagbalay.views.EditHouseholdMemberInfoPage"/>
        <page name="edit-contact" template="tagabukid.tagbalay.views.EditHouseholdContactInfoPage"/>
        <page name="verify-householdheadname" template="tagabukid.tagbalay.views.EditHouseholdHeadVerificationPage"/>        
        <page name="edit-attachments" template="tagabukid.tagbalay.views.EditHouseholdAttachmentPage"/>
        <page name="confirm" template="tagabukid.tagbalay.views.EditHouseholdConfirmPage"/>
        <page name="save-success" template="tagabukid.tagbalay.views.EditHouseholdSuccessPage"/>
    </pages>
    
</workunit>